<h1>Login</h1>

<%= form_for(:session, url: login_path) do |f| %>
    <p>
      <%= f.label :username %>
      <br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :password %>
      <br>
      <%= f.password_field :pass %>
    </p>
    <%= f.submit 'Login' %>
<% end %>

<%= link_to 'Register', new_user_path %>

